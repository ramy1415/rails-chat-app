<%= form_with(scope: resource, url: registration_path(resource_name),local: true,:html=>{class:"ui equal width form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="fields">
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "text",placeholder: "Username" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
    <%= f.submit "Sign up",class:"ui submit button" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>