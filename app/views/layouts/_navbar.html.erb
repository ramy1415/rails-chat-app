<div class="ui large inverted menu">
    <div class="ui container">
        <%= link_to(root_path ,class:"active item") do %>
            <span>Chatroom</span>
        <% end %>
        <a class="item">
            Messages
        </a>
        <div class="right menu">
            <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
                <% if user_signed_in? %>
                    <%= link_to(destroy_user_session_path ,class:"item",method: :delete) do %>
                        <span>Logout</span>
                    <% end %>
                <% else %>
                    <%= link_to(new_user_session_path ,class:"item") do %>
                        <span>Login</span>
                    <% end %>
                    <%= link_to(new_user_registration_path ,class:"item") do %>
                        <span>Sign Up</span>
                    <% end %>
                <% end %>
            </div>
            </div>
            <% if !user_signed_in? %>
                <div class="item">
                    <%= link_to(new_user_registration_path ,class:"ui primary button") do %>
                        <span>Sign Up</span>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>