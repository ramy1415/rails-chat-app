<h4 class="ui center medium aligned icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>


<div class="ui two column grid">
    <div class="twelve wide column">
            <div class="ui fluid raised card chatbox">
                <div class="content">
                    <div class="ui feed">
                        <%= render @messages %>
                </div>
            </div>
                <div class="extra content">

                    <%# <form class="ui reply form"> %>
                    <%= form_with(scope: 'message' ,url: "messages/create", method: "post",class:"ui reply form") do |f| %>
                        <div class="field">
                            <div class="ui fluid icon input">
                                <%= f.text_field :body ,class: "create_input",placeholder:"Enter a message..."%>
                                <%= f.button do %>
                                    <i class="bordered inverted orange edit icon"></i>
                                <% end %>
                                <%# <input type="text" placeholder="Enter a message...">
                                <i class="bordered inverted orange edit icon"></i> %>
                            </div>
                        </div>
                    <% end %>
                    <%# </form> %>
                </div>
            </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                <a class="active item">
                    Home
                </a>
                <a class="item">
                    Messages
                </a>
                <a class="item">
                    Friends
                </a>
                </div>
            </div>
        </div>
    </div>

</div>





